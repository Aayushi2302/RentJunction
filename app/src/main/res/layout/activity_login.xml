<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/limageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/login_background" />

    <EditText
        android:id="@+id/linputEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/mainColor"
        android:textColorHint="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/limageView" />

    <EditText
        android:id="@+id/linputPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/mainColor"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/source_sans_pro_semibold"
        app:layout_constraintTop_toBottomOf="@id/linputEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/lresetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linputPassword"
        app:layout_constraintStart_toStartOf="@id/linputPassword"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey"
        android:text="Forgot Password?"
        android:fontFamily="@font/source_sans_pro_semibold"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/lresetPassword"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/mainColor"
        android:text="Login"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/source_sans_pro_semibold"/>

    <TextView
        android:id="@+id/lorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="OR"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/source_sans_pro_semibold"/>

    <TextView
        android:id="@+id/lnewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/grey"
        android:text="New User? Register Here"
        android:fontFamily="@font/source_sans_pro_semibold"/>

</androidx.constraintlayout.widget.ConstraintLayout>